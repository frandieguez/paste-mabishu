<% content_for :sidebar do %>
  <%= typus_block("new_sidebar") || actions %>
<% end %>

<%= display_link_to_previous if params.size > 0 %>

<h2><%= link_to "Dashboard", typus_dashboard_url %> &rsaquo; <%= link_to @model.name.pluralize.titleize, :action => "index" %> &rsaquo; New</h2>

<%= typus_block("new_top") %>

<% form_for :item, 
            :url  => { :action => "create" }, 
            :html => { :multipart => true } do %>
  <%= typus_form %>
  <p><%= submit_tag "Create entry", :class => 'button' %></p>
<% end %>

<%= typus_block("new_bottom") %>